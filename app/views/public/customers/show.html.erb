<div class="container">
  <div class="row">
  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">マイページ</div>
  </div>
    <table class="table">
      <thead class="table-borderless">
        <th>登録情報</th>
        <td>
          <%=link_to "編集する",customers_information_edit_path,class:"btn btn-success" %>
        </td>
      </thead>
      <tbody class="table-sm table-bordered border-dark">
        <tr>
          <td class="table-active">氏名</td>
          <td>
            <%= @customer.last_name %>
            <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td>
            <%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td>
            <%= @customer.postal_code %>
          </td>
        </tr>
        <tr>
          <td class="table-active">住所</td>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
          <td>
            <%= @customer.telephone_number %>
          </td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td>
            <%= @customer.email %>
          </td>
        </tr>
      </tbody>
      <tr class="table-borderless">
        <th>配送先</th>
        <td>
          <%= link_to "一覧を見る",addresses_path,class:"btn btn-primary" %>
        </td>
      </tr>
      <tr class="table-borderless">
        <th>注文履歴</th>
        <td>
          <%= link_to "一覧を見る",orders_path,class:"btn btn-primary" %>
        </td>
      </tr>
    </table>
  </div>
</div>


