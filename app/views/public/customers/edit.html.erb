<div class="container">

 <form>
  <%= form_with model:@customer,url:customers_information_path do |f| %>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">氏名</label>
    <div class="col-sm-5">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col-sm-5">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col-sm-10">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address, autofocus: true, autocomplete: "address",class:"form-control border border-dark" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">電話番号</label>
    <div class="col-sm-10">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2"> </div>
    <div class="col-sm-5">
      <%= f.submit '編集内容を保存',class:"btn btn-success" %>
    </div>
    <div class="col-sm-5">
      <%= f.submit '退会する',class:"btn btn-danger" %>
    </div>
  </div>
  <% end %>
 </form>

</div>

