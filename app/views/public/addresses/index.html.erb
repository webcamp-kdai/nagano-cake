<div class="container">
  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">配送先登録/一覧</div>
  </div>

    <%= form_with model:@address,url:addresses_path do |f| %>
    <div class="row">
      <label class="col-sm-3 ">郵便番号（ハイフンなし）</label>
      <div class="col-sm-9">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="row">
      <label class="col-sm-3 l">住所</label>
      <div class="col-sm-9">
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="row mb-3">
      <label class="col-sm-3 ">氏名</label>
      <div class="col-sm-5">
        <%= f.text_field :name %>
      </div>
      <div class="col-sm-2">
      <%= f.submit '新規登録',class:"btn btn-success" %>
      </div>
    </div>
    <% end %>
  <table class="table table-sm table-bordered border-dark">
    <thead class="table-active">
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
      <tr>
         <td><%= address.postal_code %></td>
         <td><%= address.address %></td>
         <td><%= address.name %></td>
         <td class="mx-auto">
          <%=link_to "編集する",edit_address_path(address.id),class:"btn btn-sm btn-success" %>
          <%=link_to ' 削除する ',address_path(address.id),method: :delete,"data-confirm"=>"本当に消しますか?" ,class:"btn btn-sm btn-danger"%>
         </td>
      </tr>
      <% end %>
    </tbody>
  </table>
    <%= paginate @addresses %>
</div>