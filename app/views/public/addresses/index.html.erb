<div class="container">
  <form>
    <%= form_with model:@address,url:addresses_path do |f| %>
    <div class="form-group">
      <div class="form-inline">
      <label class="col-sm-3 control-label">郵便番号（ハイフンなし）</label>
      <div class="col-sm-9">
        <%= f.text_field :postal_code %>
      </div>
      </div>
    </div>
    <div class="form-group">
      <div class="form-inline">
      <label class="col-sm-3 col-control-label">住所</label>
      <div class="col-sm-9">
        <%= f.text_field :address,class:"form-control" %>
      </div>
      </div>
    </div>
    <div class="form-group">
      <div class="form-inline">
      <label class="col-sm-3 control-label">氏名</label>
      <div class="col-sm-9">
        <%= f.text_field :name %>
      </div>
      </div>
    </div>
    <div class="form-group">
      <div class="form-inline">
      <%= f.submit '新規登録',class:"btn btn-success" %>
      </div>
    </div>
    <% end %>
  </form>
  <table class="table table-bordered border-dark">
    <thead class="table-active">
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
      <tr>
         <td><%= address.postal_code %></td>
         <td><%= address.address %></td>
         <td><%= address.name %></td>
         <td class="mx-auto">
          <%=link_to "編集する",edit_address_path(address.id),class:"btn btn-success" %>
         </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>