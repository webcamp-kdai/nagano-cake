<div class="container">
  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">新規会員登録</div>
  </div>
  <%= form_with model:@customer,url:customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">氏名</label>
    <div class="col-sm-8">
      <%="(姓)"%><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %><%="(名)"%><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">フリガナ</label>
    <div class="col-sm-8">
      <%="(ｾｲ)"%><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %><%="(ﾒｲ)"%><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">メールアドレス</label>
    <div class="col-sm-8">
      <%="　"%> <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">郵便番号</label>
    <div class="col-sm-8">
      <%="　"%> <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">住所</label>
    <div class="col-sm-8">
      <%="　"%> <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">電話番号(ハイフンなし)</label>
    <div class="col-sm-8">
      <%="　"%> <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">パスワード(6文字以上)</label>
    <div class="col-sm-8">
      <% if @minimum_password_length %>
      <em><% @minimum_password_length %></em>
      <% end %>
      <%="　"%> <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold">パスワード(確認用)</label>
    <div class="col-sm-8">
      <%="　"%> <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row mb-1">
    <label class="col-sm-3 font-weight-bold"></label>
    <div class="col-sm-8">
      <%="　"%> <%= f.submit "新規登録",class:"btn btn-success" %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">既に登録済みの方</div>
  </div>
  <div class="row">
    <div class="col">
    <%= link_to "こちら",new_customer_session_path %>からログインしてください
    </div>
  </div>
</div>