<div class="container">
  <div class="row">
    <div class="ml-5 mb-1 font-weight-bold bg-light">注文情報入力</div>
  </div>
    <%= form_with model:@order,url:orders_comfirm_path,local: true do |f| %>
    <fieldset class="row mb-1">
      <legend class="col-form-label font-weight-bold col-sm-3 pt-0">支払方法</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
        </div>
        <div class="form-check">
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
        </div>
      </div>
    </fieldset>

    <fieldset class="row mb-1">
      <legend class="col-form-label font-weight-bold col-sm-3 pt-0">お届け先</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <%= f.radio_button :select_address,0,{:checked => true} %>
          <%= f.label :address_1,"ご自身の住所" %>
          <div class="col-sm-10 ">
            〒<%= current_customer.address %>
          </div>
          <div class="col-sm-10 ">
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </div>
        </div>
        <div class="form-check">
          <%= f.radio_button :select_address,1 %>
          <%= f.label :address_2,"登録先の住所" %>
          <div class="col-sm-10 pb-1">
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </div>
        </div>
        <div class="form-check">
          <%= f.radio_button :select_address,2 %>
          <%= f.label :address_3,"新しいお届け先" %>
          <div class="col-sm-12">
            <label class="col-sm-4 col-form-label">郵便番号（ハイフンなし）</label>
            <%= f.text_field :postal_code,class:"form-control-sm border border-dark" %>
          </div>
          <div class="col-sm-12">
            <label class="col-sm-4 col-form-label">住所</label>
            <%= f.text_field :address,class:"form-control-sm col-7 border border-dark" %>
          </div>
          <div class="col-sm-12">
            <label class="col-sm-4 col-form-label">宛名</label>
            <%= f.text_field :name,class:"form-control-sm border border-dark" %>
          </div>
        </div>
      </div>
    </fieldset>

    <div class="row mb-2">
      <div class="col-sm-5 mx-auto">
        <%= f.submit '確認画面へ進む',class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
</div>