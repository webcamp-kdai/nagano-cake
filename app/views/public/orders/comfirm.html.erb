<div class="container">
  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">注文情報確認</div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-8">
      <table class="table table-bordered border-dark">
        <thead class="table-active">
          <td class="border border-dark">商品名</td>
          <td class="border border-dark">単価（税込）</td>
          <td class="border border-dark">数量</td>
          <td class="border border-dark">小計</td>
        </thead>
        <tbody>
         <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="border border-dark">
              <%= image_tag cart_item.item.get_image(30,30) %>
              <%= cart_item.item.name %>
            </td>
           <td class="border border-dark"><%= cart_item.item.add_tax_price.to_s(:dalimited) %></td>
           <td class="border border-dark">
             <%= cart_item.amount %>
           </td>
           <td class="border border-dark">
             <%= cart_item.sub_total.to_s(:dalimited) %>
           </td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3">
      <table class="table table-bordered border-dark">
        <tbody>
          <tr>
           <td class="table-active border border-dark">送料</td>
           <td class="border border-dark">
             <%= @order.shopping_cost %>
           </td>
          </tr>
          <tr>
           <td class="table-active border border-dark">商品合計</td>
           <td class="border border-dark">
             <%= @total.round.to_s(:delimited) %>
           </td>
          </tr>
          <tr>
           <td class="table-active border border-dark">請求額</td>
           <td class="border border-dark">
             <%= @order.total_payment.to_s(:delimited) %>
           </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label font-weight-bold">支払方法</label>
    <div class="col-sm-10">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row mb-0">
    <label class="col-sm-2 col-form-label font-weight-bold">お届け先</label>
    <div class="col-sm-10">
      〒<%= @order.postal_code %><%= @order.address %>
    </div>
  </div>
  <div class="row mb-3 pt-0">
    <label class="col-sm-2 col-form-label font-weight-bold"></label>
    <div class="col-sm-10">
      <%= @order.name %>
    </div>
  </div>

  <div class="row offset-md-5">
  <%= form_with model: @order, url:orders_path, local: true do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :shopping_cost %>
    <%= f.hidden_field :total_payment %>
    <%= f.hidden_field :payment_method %>
    <%= f.submit "注文を確定する",class:"btn btn-success" %>
  <% end %>
  </div>
</div>