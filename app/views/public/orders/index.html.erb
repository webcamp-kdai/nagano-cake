<div class="container">
    <h5>注文履歴一覧</h5>
  <table class="table table-bordered border-dark">
    <thead class="table-active">
      <td class="border border-dark">注文日</td>
      <td class="border border-dark">配送先</td>
      <td class="border border-dark">注文商品</td>
      <td class="border border-dark">ステータス</td>
      <td class="border border-dark">注文詳細</td>
    </thead>
    <tbody>
     <% @orders.each do |order| %>
      <tr>
         <td class="border border-dark">
           <%= order.created_at %>
         </td>
         <td class="border border-dark">
           <%= order.postal_code %></br>
           <%= order.address %></br>
           <%= order.name %>
         </td>
         <td class="border border-dark">
           <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
           <% end %>
         </td>
         <td class="border border-dark">

         </td>
         <td class="border border-dark">
           <%= link_to '表示する',order_path(order.id),class:"btn btn-primary" %>
         </td>
      </tr>
     <% end %>
    </tbody>
  </table>

</div>