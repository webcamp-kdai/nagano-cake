<div class="container">
  <div class="row mb-3">
    <div class="col-sm-2">
      <div class="border border-dark">
        <div class="col-sm-offset-5 font-weight-bold">ジャンル検索</div>
      </div>
      <div class="border border-dark">
        <% @genres.each do |genre| %>
        <div class="m-3">
          <%= genre.name %>
        </div>
        <% end %>
        </br></br></br>
      </div>
    </div>

    <div class="col-sm-10">
      <div class="row mb-3">
        <div class="font-weight-bold">商品一覧</div>（全<%= @items.count(:name) %>件）
      </div>
      <div class="row mb-3">
        <% @items.each do |item| %>
          <div class="col-sm-3">
            <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(180,180) %>
            <% end %>
            </br>
            <p class="small">
            <%= item.name %></p>
            ¥<%= item.price %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= paginate @items %>
</div>