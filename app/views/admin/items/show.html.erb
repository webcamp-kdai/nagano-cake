<div class="container">
  <h4>商品詳細</h4>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-md-6 flex-column">
      <div>
        <div class="form-inline">
        <label class="col-md-3">商品名</label>
        <div class="col-md-9">
        <%= @item.name %>
        </div>
        </div>
      </div>
      <div>
        <div class="form-inline">
        <label class="col-md-3">商品説明</label>
        <div class="col-md-9">
          <%= @item.introduction %>
        </div>
        </div>
      </div>
      <div>
        <div class="form-inline">
        <label class="col-md-3">ジャンル</label>
        <div class="col-md-9">
        <%= @item.genre.name %>
        </div>
        </div>
      </div>
      <div>
        <div class="form-inline">
        <label class="col-md-3">税込価格  （税抜価格）</label>
        <div class="col-md-9">
          <%= @item.add_tax_price.to_s(:dalimited) %><%= "（" %><%= @item.price.to_s(:dalimited) %><%= "）円" %>
        </div>
        </div>
      </div>
      <div class="status">
        <div class="form-inline">
        <label class="col-md-3">販売ステータス</label>
        <div class="cil-md-9">

        </div>
      </div>
      <div>
        <%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>