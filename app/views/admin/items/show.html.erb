<div class="container">
  <h4>商品詳細</h4>
  <div class="row mb-3">
    <div class="col-4 ">
      <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-sm-8">
      <div class="row mb-3">
        <label class="col-sm-3">商品名</label>
        <div class="col-sm-5">
          <%= @item.name %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-3">商品説明</label>
        <div class="col-sm-6">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-3">ジャンル</label>
        <div class="col-sm-6">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-3">税込価格</br>（税抜価格）</label>
        <div class="col-sm-6">
          <%= @item.add_tax_price.to_s(:delimited) %><%= "（" %><%= @item.price.to_s(:delimited) %><%= "）円" %>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-3">販売ステータス</label>
        <div class="col-sm-6">
          <%= @item.is_active %>
        </div>
      </div>
    </div>
  </div>
  <div class="mx-auto my-auto">
    <div class="d-flex align-items-center justify-content-center">
      <%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-success" %>
    </div>  
  </div>
</div>