<div class="container">
  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">ジャンル一覧・追加</div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 font-weight-bold">ジャンル名</label>
      <div class="col-sm-10">
        <%= form_with model:@genre,url:admin_genres_path do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録',class:"btn btn-success" %>
        <% end %>
      </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-7">
      <table class="table">
        <thead class="table-active">
          <th>ジャンル</th>
          <th></th>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
           <td>
             <%= link_to "編集する",edit_admin_genre_path(genre.id) %>
           </td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
