<div class="container">
  <div class="row">
    <div class="ml-5 mb-3 font-weight-bold bg-light">会員一覧</div>
  </div>
  <table class="table">
  <thead class="table-active">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
        <%= customer.last_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <% if customer.is_deleted == true %>
           <%= "退会" %>
        <% else %>
           <%= "有効" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
 </table>
<%= paginate @customers %>
</div>